{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "NodeNext",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "forge.config.ts", "package.json"]
}
